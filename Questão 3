<body>
    <div class="container">
        <h2>Formulário de Contato</h2>
        <form id="Contato" onsubmit="return validarFormulario(event)">
            <div class="local">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" required>
            </div>
            <div class="local">
                <label for="email">Email:</label>
                <input type="email" id="email" required>
            </div>
            <div class="local">
                <label for="mensagem">Mensagem:</label>
                <textarea id="mensagem" required></textarea>
            </div>
            <button type="submit">Enviar</button>
        </form>
        <div id="mensagem-resultado"></div>
    </div>

    <script>
        function validarEmail(email) {
            const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return regex.test(email);
        }

        function validarFormulario(event) {
            event.preventDefault();
            
            const nome = document.getElementById('nome').value;
            const email = document.getElementById('email').value;
            const mensagem = document.getElementById('mensagem').value;
            const resultado = document.getElementById('mensagem-resultado');

            if (!nome || !email || !mensagem) {
                resultado.style.display = 'block';
                resultado.style.backgroundColor = '#ff6b6b';
                resultado.textContent = 'Por favor, preencha todos os campos.';
                return false;
            }

            if (!validarEmail(email)) {
                resultado.style.display = 'block';
                resultado.style.backgroundColor = '#ff6b6b';
                resultado.textContent = 'Por favor, insira um email válido.';
                return false;
            }

            resultado.style.display = 'block';
            resultado.style.backgroundColor = '#90EE90';
            resultado.textContent = 'Sucesso!';
            document.getElementById('formContato').reset();
            return false;
        }
    </script>
</body>
</html>
